<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/clr_main_background_color"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/label_main_hello" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helloTextView"
        android:textSize="@dimen/activity_label_main_size"
        android:textColor="@color/clr_main_text_color"/>
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helloTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/clr_main_text_color"
        android:background="@color/clr_main_button_color"
        android:text="@string/button_main_start"/>
    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_main_info"
        android:textSize="@dimen/activity_label_main_size"
        android:textColor="@color/clr_main_text_color"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />/>

</RelativeLayout>
